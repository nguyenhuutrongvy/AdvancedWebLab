@model TatBlog.WebApp.Areas.Admin.Models.PostFilterModel
@{
    ViewData["PageTitle"] = "Danh sách bài viết";
    var postsList = ViewBag.PostsList as IPagedList<Post>;
}

<h1>
    Danh sách bài viết
</h1>

<!-- Hiển thị Form để tìm kiếm bài viết -->
<partial name="_PostFilterPane" model="Model" />

@if (postsList != null && postsList.Count > 0)
{
    <table class="table table-responsive table-striped">
        <thead>
            <tr>
                <th>Tiêu đề</th>
                <th>Tác giả</th>
                <th>Chủ đề</th>
                <th>Xuất bản</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in postsList)
            {
                <tr>
                    <td>
                        <a asp-area="Admin"
                   asp-controller="Posts"
                   asp-action="Edit"
                   asp-route-id="@post.Id"
                   class="text-bold">
                            @post.Title
                        </a>
                        <p class="text-muted">
                            @post.ShortDescription
                        </p>
                    </td>
                    <td>
                        @post.Author.FullName
                    </td>
                    <td>
                        @post.Category.Name
                    </td>
                    <td>
                        <a type="submit" class="btn btn-sm @(post.Published ? "btn-success" : "btn-danger")"
                        asp-area="Admin"
                        asp-controller="Posts"
                        asp-action="UpdateType"
                        asp-route-id="@post.Id">
                            @if (post.Published)
                            {
                                <i class="fa fa-check"></i>
                            }
                            else
                            {
                                <i class="fa fa-times"></i>
                            }
                        </a>
                    </td>
                    <td>
                        <a asp-area="Admin"
                   asp-controller="Posts"
                   asp-action="Delete"
                   asp-route-id="@post.Id"
                   class="btn btn-outline-danger"
                   onclick="return confirm('Bạn có thực sự muốn xóa bài viết này không?')">
                            Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <partial name="_Pager" model="@postsList" />
}
else
{
    <h1 class="text-danger">
        Không tìm thấy bài viết nào!
    </h1>
}
